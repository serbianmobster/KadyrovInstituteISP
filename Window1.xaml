<Window x:Class="KadyrovInstituteISP.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KadyrovInstituteISP"
        mc:Ignorable="d"
        Title="" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="0,0,-0.4,0">
            <StackPanel Orientation="Horizontal">
                <TextBlock>ФИО</TextBlock>
                <TextBox x:Name="txtName" Width="140"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock>Группа</TextBlock>
                <TextBox x:Name="txtGroup" Width="140"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Кафедра</TextBlock>
                <TextBox x:Name="txtKafedra" Width="140"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Учебный курс</TextBlock>
                <TextBox x:Name="txtCourse" Width="140"></TextBox>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
